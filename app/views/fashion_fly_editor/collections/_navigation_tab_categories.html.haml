%ul.ffe-categories
  %li.ffe-category{ 'ng-repeat' => 'category in categories.categories', 'ng-class' => "{active:isActive(category.id)}"}
    %img{ 'ng-click' => 'selectCategory(category.id)', src: "{{category.icon}}", title: '{{ category.name}}', class: 'category__thumbnail', 'ng-click' => 'selectCategory(category.id)' }
    %span {{category.name}}
.ffe-filters.ffe-clear
  %h4 Filter
  %select{ ng: { model: 'filter_subcategory', options: 'subcategory.name for subcategory in subcategories.categories', change: 'updateFilters()' } }
    %option{ value: ''} -- Unterkategorie --

  %select{ ng: { model: 'filter_brand', options: 'brand.name for brand in brands track by brand.id', change: 'updateFilters()' } }
    %option{ value: ''} -- Marke --

  %select{ ng: { model: 'filter_color', options: 'color.hex for color in colors track by color.id', change: 'updateFilters()' } }
    %option{ value: ''} -- Farbe --

  %select{ ng: { model: 'filter_priceRange', options: 'price.range for price in priceRanges track by price.range', change: 'updateFilters()' } }
    %option{ value: ''} -- Preis --

= render 'items'

= render 'pagination'