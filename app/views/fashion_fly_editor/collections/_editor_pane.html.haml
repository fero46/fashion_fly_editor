.ffe-editor__pane
  %ul.navigation_tab
    %li.active#tab1{'navigation-tab' => 'ff-tab_categories', "ng-click" => "tabs.selectTab(1)"}
      %a{translate: 'collections.editor_pane.categories'}
    %li#tab2{'navigation-tab' => 'ff-tab_search', "ng-click" => "tabs.selectTab(2)"}
      %a{translate: 'collections.editor_pane.search'}
  %div.ff-tab-window.ff-tab_categories{ "ng-show" => "tabs.isSelected(1)", "ng-class" => "{active:tabs.isSelected(1)}"}
    = render 'navigation_tab_categories'
  %div.ff-tab-window.ff-tab_search{ "ng-show" => "tabs.isSelected(2)", "ng-class" => "{active:tabs.isSelected(2)}"}
    = render 'navigation_tab_search'