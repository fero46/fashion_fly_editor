.editor__pane{ 'ng-controller' => 'SidebarsController'}
  %h4.clear Categories
  %ul.categories
    %li.category{ 'ng-repeat' => 'category in categories.categories' }
      %img{ src: "{{category.image}}", class: 'category__thumbnail', 'ng-click' => 'selectCategory(category.id)' }
      .category__name{'ng-click' => 'selectCategory(category.id)' } {{ category.name }}

  .filters.clear
    %h4 Filter
    %select{ ng: { model: 'filter_subcategory', options: 'subcategory.name for subcategory in subcategories.categories', change: 'updateItems()' } }
      %option{ value: ''} -- Unterkategorie --

    %select{ ng: { model: 'filter_brand', options: 'brand for brand in brands', change: 'updateItems()' } }
      %option{ value: ''} -- Marke --

    %select{ ng: { model: 'filter_color', options: 'color.hex for color in colors', change: 'updateItems()' } }
      %option{ value: ''} -- Farbe --

    %select{ ng: { model: 'filter_priceRange', options: 'price.range for price in priceRanges', change: 'updateItems()' } }
      %option{ value: ''} -- Preis --

  %h4.clear Items
  %ul.products
    %li.product{ 'draggable' => true, 'ng-repeat' => 'product in products.products', data: { item: "{{product}}" } }
      %img{ src: "{{product.image}}", class: 'product__thumbnail', 'ng-click' => 'selectProduct(product.id)', title: "{{ product.name }}" }
